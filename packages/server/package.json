{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.8",
    "@graphql-tools/schema": "^8.3.8",
    "@nearform/sql": "^1.9.2",
    "apollo-server-core": "^3.6.7",
    "apollo-server-express": "^3.6.7",
    "argon2": "^0.28.5",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-jwt": "^6.1.1",
    "graphql": "^15.8.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.7.0",
    "jsonwebtoken": "^8.5.1",
    "sqlite3": "^5.0.2",
    "winston": "^3.7.2",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.17.7",
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.8",
    "@graphql-codegen/typescript": "^1.23.0",
    "@graphql-codegen/typescript-resolvers": "^1.20.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.13",
    "@types/express-jwt": "^6.0.4",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/sqlite3": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "start": "rm -rf dist && yarn build && node ./dist/index.js",
    "start:dev": "concurrently \"yarn dev:app\" \"yarn graphql:generate --watch\"",
    "dev:app": "nodemon --exec 'babel-node --extensions \".ts\" ./src/index.ts'",
    "build": "yarn graphql:generate && yarn build:types && yarn build:js",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig-build.json",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps true",
    "test": "nyc mocha tests",
    "prettier": "prettier --check '{src,tests}/**/*.*'",
    "prettier:write": "prettier --write '{src,tests}/**/*.*'",
    "lint": "eslint '{src,tests}/**/*.{j,t}s{,x}'",
    "lint:fix": "eslint --fix '{src,tests}/**/*.{j,t}s{,x}'",
    "graphql:generate": "graphql-codegen"
  }
}
