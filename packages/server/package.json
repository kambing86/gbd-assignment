{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/load-files": "^6.2.2",
    "@graphql-tools/merge": "^6.2.2",
    "@nearform/sql": "^1.4.0",
    "@phc/argon2": "^1.0.9",
    "apollo-server-express": "^2.17.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "graphql": "^15.3.0",
    "graphql-playground-middleware-express": "^1.7.21",
    "jsonwebtoken": "^8.5.1",
    "sqlite3": "^5.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.11.5",
    "@graphql-codegen/add": "^2.0.1",
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.9",
    "@graphql-codegen/typescript-resolvers": "^1.17.9",
    "@types/cors": "^2.8.7",
    "@types/express": "4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/sqlite3": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "prestart": "yarn build",
    "start": "node ./dist/index.js",
    "start:dev": "concurrently \"yarn dev:app\" \"yarn dev:graphql\"",
    "dev:app": "nodemon --exec 'babel-node --extensions \".ts\" ./src/index.ts'",
    "dev:graphql": "yarn generate --watch",
    "prebuild": "rm -rf dist",
    "build": "yarn generate && yarn build:types && yarn build:js",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig-build.json",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps true",
    "test": "nyc mocha tests",
    "prettier": "prettier --check '{src,tests}/**/*.*'",
    "prettier:write": "prettier --write '{src,tests}/**/*.*'",
    "lint": "eslint '{src,tests}/**/*.{j,t}s{,x}'",
    "lint:fix": "eslint --fix '{src,tests}/**/*.{j,t}s{,x}'",
    "generate": "graphql-codegen"
  }
}
